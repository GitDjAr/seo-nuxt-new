{
  //https://nuxt.com/blog/eslint 模块
  //启用 ESlint 平面配置支持
  "eslint.experimental.useFlatConfig": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "search.exclude": {
    "**/_pgbackup": true,
    ".nuxt": true,
    ".output": true,
    "dist": true,
    ".unlighthouse": true
  }
}
